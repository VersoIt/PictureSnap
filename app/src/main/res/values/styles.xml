<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="captionText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="headerText">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="headerText.topHeader">
        <item name="android:layout_marginStart">30dp</item>
    </style>

    <style name="purpleTextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="whiteTextButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="whiteTextButton.purpleButton">
        <item name="android:background">@drawable/rect_purple</item>
    </style>

    <style name="purpleTextButton.roundedPurpleButton">
        <item name="android:background">@drawable/rect_purple_border</item>
    </style>

    <style name="search_text">
        android:textSize="16sp"
    </style>

    <style name="search_field">
        <item name="android:inputType">text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rect_grey</item>
    </style>

    <style name="purpleTextButton.transparentButton">
        <item name="android:background">@drawable/transparent</item>
    </style>

    <style name="dataInputField">
        <item name="android:padding">16dp</item>
    </style>

</resources>