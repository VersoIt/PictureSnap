<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSelection">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_photograph"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            style="@style/purpleTextButton.roundedPurpleButton"

            android:text="@string/i_am_client"

            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.8"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_client"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/imageView_bottomArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_arrow_alt"
            android:layout_margin="16dp"

            android:contentDescription="@string/app_name"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_client"
            app:layout_constraintTop_toBottomOf="@id/button_photograph" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_client"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            style="@style/whiteTextButton.purpleButton"
            android:text="@string/i_am_photograph"

            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.8"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_photograph"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>