<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"

    android:id="@+id/relativeLayout_family_photo_session"

    android:layout_height="@dimen/service_button_size"

    android:layout_marginVertical="5dp"
    android:layout_width="match_parent">

    <ImageView
        android:id="@+id/imageView_background"
        android:background="@drawable/rect_white"
        android:contentDescription="@string/family_photo_session"

        android:foreground="@color/transparent_black"
        android:layout_alignParentEnd="true"

        android:layout_alignParentStart="true"

        android:layout_height="wrap_content"
        android:layout_width="0dp"

        android:scaleType="centerCrop"
        tools:src="@drawable/family" />

    <TextView
        android:id="@+id/textView_header"
        style="@style/headerText"
        android:gravity="center"
        android:layout_alignParentBottom="true"

        android:layout_alignParentTop="true"
        android:layout_gravity="center"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:textColor="@color/white"

        tools:text="@string/family_photo_session" />

</RelativeLayout>