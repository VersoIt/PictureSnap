<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.common.BankCardLink">

    <LinearLayout
        android:id="@+id/linearLayout_header"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/base_elements_margin"

        android:orientation="vertical"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView_header"

            android:paddingHorizontal="10dp"

            style="@style/headerText.largeMargin"

            android:layout_margin="16dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/working_days_selection"

            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp" />

        <View
            android:id="@+id/view_line"

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/rect_grey" />

    </LinearLayout>

    <LinearLayout
        style="@style/fieldsContainer.selection"

        android:id="@+id/linearLayout_input_fields_container"
        android:background="@drawable/rect_white"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/base_elements_margin"
        android:orientation="vertical"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="@dimen/layout_width_percent_block"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                style="@style/textField"

                android:width="140dp"

                android:text="@string/monday"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/selectionInputField"

                    android:text="@string/zero_time" />

                <TextView
                    android:textColor="@color/grey"

                    android:layout_marginHorizontal="10dp"

                    android:text="@string/double_point"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/selectionInputField"

                    android:text="@string/zero_time" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                style="@style/textField"

                android:width="140dp"

                android:text="@string/tuesday"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/selectionInputField"

                    android:text="@string/zero_time" />

                <TextView
                    android:textColor="@color/grey"

                    android:layout_marginHorizontal="10dp"

                    android:text="@string/double_point"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/selectionInputField"

                    android:text="@string/zero_time" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                style="@style/textField"

                android:maxWidth="140dp"

                android:width="140dp"

                android:text="@string/wednesday"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/selectionInputField"

                    android:text="@string/zero_time" />

                <TextView
                    android:textColor="@color/grey"

                    android:layout_marginHorizontal="10dp"

                    android:text="@string/double_point"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/selectionInputField"

                    android:text="@string/zero_time" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                style="@style/textField"

                android:maxWidth="140dp"

                android:width="140dp"

                android:text="@string/thursday"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/selectionInputField"

                    android:text="@string/zero_time" />

                <TextView
                    android:textColor="@color/grey"

                    android:layout_marginHorizontal="10dp"

                    android:text="@string/double_point"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/selectionInputField"

                    android:text="@string/zero_time" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                style="@style/textField"

                android:maxWidth="140dp"

                android:text="@string/friday"

                android:width="140dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/selectionInputField"

                    android:text="@string/zero_time" />

                <TextView
                    android:textColor="@color/grey"

                    android:layout_marginHorizontal="10dp"

                    android:text="@string/double_point"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/selectionInputField"

                    android:text="@string/zero_time" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                style="@style/textField"

                android:maxWidth="140dp"

                android:text="@string/saturday"

                android:width="140dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/selectionInputField"

                    android:text="@string/zero_time" />

                <TextView
                    android:textColor="@color/grey"

                    android:layout_marginHorizontal="10dp"

                    android:text="@string/double_point"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/selectionInputField"

                    android:text="@string/zero_time" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                style="@style/textField"

                android:maxWidth="140dp"

                android:text="@string/sunday"

                android:width="140dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/selectionInputField"

                    android:text="@string/zero_time" />

                <TextView
                    android:textColor="@color/grey"

                    android:layout_marginHorizontal="10dp"

                    android:text="@string/double_point"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/selectionInputField"

                    android:text="@string/zero_time" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView_addition"
        style="@style/additionText"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="@dimen/layout_width_percent_block"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout_input_fields_container"

        android:text="@string/photoshoot_time_addition"/>

    <include
        layout="@layout/layout_ready_button"

        android:id="@+id/layout_ready_button"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="@dimen/layout_width_percent_block"

        app:layout_constraintTop_toBottomOf="@id/textView_addition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>