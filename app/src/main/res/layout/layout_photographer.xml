<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:gravity="end"
    android:background="@drawable/rect_white"

    android:padding="10dp"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_photographer_name"

            style="@style/standardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:maxWidth="220dp"

            android:textSize="20sp"

            android:ellipsize="end"
            android:singleLine="true"

            tools:text="Иванов Иван!" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_photographer_address"

            android:textColor="@color/search_hint_color"
            android:layout_marginTop="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:maxWidth="220dp"
            android:ellipsize="end"

            android:textSize="20sp"
            tools:text="Москва" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"

        android:layout_weight="1"
        android:gravity="end|center_vertical"

        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/textView_photographer_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:text="5/5" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_photographer_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginStart="10dp"

            android:background="@drawable/round_background"
            android:contentDescription="@string/app_name" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>