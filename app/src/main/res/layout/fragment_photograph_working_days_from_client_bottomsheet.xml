<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_white"
    tools:context=".presentation.fragments.photograph.PhotographWorkingDaysFromClient">

    <LinearLayout
        android:id="@+id/linearLayout_header"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/small_margin"

        android:orientation="vertical"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:paddingHorizontal="10dp"

            android:textSize="22sp"
            android:textStyle="bold"

            android:layout_margin="16dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/work_days"

            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp" />

        <View
            android:id="@+id/view_line"

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/rect_grey" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        style="@style/fieldsContainer.selection"

        android:id="@+id/recyclerView_working_days_container"
        android:background="@drawable/rect_white"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/small_margin"
        android:orientation="vertical"

        tools:itemCount="7"
        tools:listitem="@layout/layout_working_day_from_client"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="@dimen/layout_width_percent_block"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout_header">

    </androidx.recyclerview.widget.RecyclerView>

    <include
        layout="@layout/layout_ready_button"

        android:id="@+id/layout_ready_button"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginVertical="@dimen/small_margin"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="@dimen/layout_width_percent_block"

        app:layout_constraintTop_toBottomOf="@id/recyclerView_working_days_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>