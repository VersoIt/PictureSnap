<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/rect_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_email"
        style="@style/textField"

        app:drawableStartCompat="@drawable/ic_email"
        tools:text="email@gmail.com" />

    <View style="@style/fieldSeparator" />

    <TextView
        android:id="@+id/textView_phone_number"
        style="@style/textField"

        app:drawableStartCompat="@drawable/ic_smartphone"
        tools:text="+7 (977) 112-01-18" />

    <View style="@style/fieldSeparator" />

    <TextView
        android:id="@+id/textView_location"
        style="@style/textField"

        app:drawableEndCompat="@drawable/ic_keyboard_arrow_right"
        app:drawableStartCompat="@drawable/ic_location_on"
        tools:text="Москва, Проспект Вернадского 86, строение 1" />

    <View style="@style/fieldSeparator" />

    <TextView
        android:id="@+id/textView_services"
        style="@style/textField"

        android:text="@string/services"
        app:drawableEndCompat="@drawable/ic_keyboard_arrow_top"
        app:drawableStartCompat="@drawable/ic_services" />

    <View style="@style/fieldSeparator" />

    <TextView
        android:id="@+id/textView_about_photograph"
        style="@style/textField"

        android:text="@string/about_photograph"
        app:drawableEndCompat="@drawable/ic_keyboard_arrow_right"
        app:drawableStartCompat="@drawable/ic_description" />

    <View style="@style/fieldSeparator" />

    <TextView
        android:id="@+id/textView_portfolio"
        style="@style/textField"

        android:text="@string/portfolio"
        app:drawableEndCompat="@drawable/ic_keyboard_arrow_right"
        app:drawableStartCompat="@drawable/ic_portfolio" />

    <View style="@style/fieldSeparator" />

    <RelativeLayout
        android:id="@+id/relativeLayout_reviews"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/textField"
            android:layout_width="match_parent"

            android:layout_alignParentStart="true"

            android:text="@string/ratings_and_feedbacks"
            app:drawableStartCompat="@drawable/ic_reviews" />

        <TextView
            android:id="@+id/textView_rating"
            style="@style/textField"

            android:layout_width="wrap_content"
            app:drawableEndCompat="@drawable/ic_keyboard_arrow_right"

            android:layout_alignParentEnd="true"

            tools:text="5/5"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

</LinearLayout>